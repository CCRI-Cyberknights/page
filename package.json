{
  "name": "ccri-cyberknights-landing-pages",
  "version": "1.7.13",
  "description": "QR Code Landing Pages for CCRI Cyberknights Club",
  "private": true,
  "scripts": {
    "dev": "python3 -m http.server 8000",
    "test": "python tests/run_tests.py",
    "test:links": "node scripts/test-links-playwright.js",
    "test:links:modern": "npx playwright test tests/playwright-link-testing-modern.spec.ts",
    "test:links:modern:debug": "npx playwright test tests/playwright-link-testing-modern.spec.ts --debug",
    "test:links:modern:ui": "npx playwright test tests/playwright-link-testing-modern.spec.ts --ui",
    "test:versioning": "npx playwright test tests/versioning-diagnostics.spec.ts",
    "test:versioning:debug": "npx playwright test tests/versioning-diagnostics.spec.ts --debug",
    "test:versioning:ui": "npx playwright test tests/versioning-diagnostics.spec.ts --ui",
    "test:links:selenium": "source ./selenium_env/bin/activate && python3 scripts/test-links-dynamic-parallel.py",
    "test:links:playwright": "npx playwright test tests/playwright-link-testing-comprehensive.spec.ts",
    "test:links:playwright:debug": "npx playwright test tests/playwright-link-testing-comprehensive.spec.ts --debug",
    "test:links:playwright:ui": "npx playwright test tests/playwright-link-testing-comprehensive.spec.ts --ui",
    "version:show": "echo $npm_package_version",
    "version:auto": "HUSKY=0 standard-version --release-as patch",
    "version:diagnose": "npm run test:versioning",
    "release": "standard-version",
    "release:patch": "standard-version --release-as patch",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CCRI-Cyberknights/page.git"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "husky": "^8.0.0",
    "standard-version": "^9.5.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run version:auto"
    }
  },
  "standard-version": {
    "scripts": {
      "postbump": "node scripts/update-version-json.js && git add version.json"
    },
    "commitAll": true
  }
}
